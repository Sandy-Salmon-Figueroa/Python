class EncuestaSatisfaccion:
    def __init__(self):
        self.respuestas = []  # (cliente, puntuaciÃ³n, comentario)
    
    def agregar(self, cliente, puntuacion, comentario=""):
        """Agrega una nueva respuesta"""
        if not 1 <= puntuacion <= 10:
            print("âŒ La puntuaciÃ³n debe ser entre 1 y 10")
            return False
        
        cliente = cliente.strip().title()
        respuesta = (cliente, puntuacion, comentario.strip())
        self.respuestas.append(respuesta)
        
        print(f"âœ… {cliente} - {puntuacion}/10")
        return True
    
    def promedio(self):
        """Calcula y muestra el promedio"""
        if not self.respuestas:
            print("ğŸ“Š AÃºn no hay respuestas")
            return 0
        
        promedio = sum(r[1] for r in self.respuestas) / len(self.respuestas)
        
        print(f"\nğŸ“Š PUNTAJE PROMEDIO: {promedio:.1f}/10")
        
        if promedio >= 9:
            print("ğŸ‰ Â¡Excelente!")
        elif promedio >= 7:
            print("ğŸ‘ Bien")
        elif promedio >= 5:
            print("ğŸ˜ Regular")
        else:
            print("âš ï¸ Necesita mejorar")
        
        return promedio
    
    def comentarios_bajos(self):
        """Muestra comentarios con puntuaciÃ³n baja (<5)"""
        bajos = [r for r in self.respuestas if r[1] < 5]
        
        if not bajos:
            print("âœ… No hay quejas recientes")
            return []
        
        print("\n" + "="*40)
        print("ğŸ”´ COMENTARIOS BAJOS")
        print("="*40)
        
        for cliente, puntos, comentario in bajos:
            print(f"\n{cliente} - {puntos}/10")
            if comentario:
                print(f"   '{comentario}'")
        
        return bajos
    
    def comentarios_altos(self):
        """Muestra comentarios con puntuaciÃ³n alta (â‰¥8)"""
        altos = [r for r in self.respuestas if r[1] >= 8]
        
        if not altos:
            print("ğŸ“ AÃºn no hay comentarios destacados")
            return []
        
        print("\n" + "="*40)
        print("ğŸŸ¢ COMENTARIOS DESTACADOS")
        print("="*40)
        
        for cliente, puntos, comentario in altos:
            print(f"\n{cliente} - {puntos}/10")
            if comentario:
                print(f"   '{comentario}'")
        
        return altos
    
    def estadisticas(self):
        """Muestra resumen general"""
        if not self.respuestas:
            print("ğŸ“ˆ AÃºn no hay datos")
            return
        
        total = len(self.respuestas)
        promedio = sum(r[1] for r in self.respuestas) / total
        
        bajos = len([r for r in self.respuestas if r[1] < 6])
        altos = len([r for r in self.respuestas if r[1] >= 8])
        
        print("\n" + "="*30)
        print("ğŸ“ˆ RESUMEN")
        print("="*30)
        print(f"Total respuestas: {total}")
        print(f"Promedio: {promedio:.1f}/10")
        print(f"Bajas (<6): {bajos}")
        print(f"Altas (â‰¥8): {altos}")
    
    def ver_todos(self):
        """Muestra todas las respuestas"""
        if not self.respuestas:
            print("ğŸ“ No hay respuestas aÃºn")
            return
        
        print("\n" + "="*30)
        print("ğŸ“ TODAS LAS RESPUESTAS")
        print("="*30)
        
        for cliente, puntos, comentario in self.respuestas:
            cara = "ğŸ”´" if puntos < 5 else "ğŸŸ¢" if puntos >= 8 else "ğŸŸ¡"
            print(f"\n{cliente} - {puntos}/10 {cara}")
            if comentario:
                print(f"   '{comentario}'")

def sistema_encuestas():
    """Sistema principal de encuestas"""
    encuesta = EncuestaSatisfaccion()
    
    while True:
        print("\n" + "="*25)
        print("ğŸ“Š ENCUESTAS CLIENTES")
        print("="*25)
        print("1. Nueva respuesta")
        print("2. Ver promedio")
        print("3. Ver quejas")
        print("4. Ver elogios")
        print("5. Ver todas")
        print("6. EstadÃ­sticas")
        print("7. Salir")
        
        opcion = input("\nOpciÃ³n: ").strip()
        
        if opcion == "1":
            print("\n--- Nueva Respuesta ---")
            cliente = input("Cliente: ")
            try:
                puntos = int(input("PuntuaciÃ³n (1-10): "))
                comentario = input("Comentario: ")
                encuesta.agregar(cliente, puntos, comentario)
            except:
                print("âŒ Error en los datos")
        
        elif opcion == "2":
            print("\n--- Promedio ---")
            encuesta.promedio()
        
        elif opcion == "3":
            print("\n--- Quejas ---")
            encuesta.comentarios_bajos()
        
        elif opcion == "4":
            print("\n--- Elogios ---")
            encuesta.comentarios_altos()
        
        elif opcion == "5":
            print("\n--- Todas ---")
            encuesta.ver_todos()
        
        elif opcion == "6":
            print("\n--- EstadÃ­sticas ---")
            encuesta.estadisticas()
        
        elif opcion == "7":
            print("ğŸ‘‹ Â¡Hasta luego!")
            break
        
        else:
            print("âŒ OpciÃ³n no vÃ¡lida")

# Ejemplo rÃ¡pido
def demo():
    """DemostraciÃ³n del sistema"""
    print("ğŸŒŸ DEMOSTRACIÃ“N ENCUESTAS")
    print("="*20)
    
    encuesta = EncuestaSatisfaccion()
    
    # Respuestas de ejemplo
    print("\n--- Agregando respuestas ---")
    encuesta.agregar("Ana GarcÃ­a", 9, "Excelente servicio")
    encuesta.agregar("Carlos LÃ³pez", 3, "Muy lento")
    encuesta.agregar("MarÃ­a RodrÃ­guez", 7, "Bien en general")
    encuesta.agregar("Pedro SÃ¡nchez", 2, "No volverÃ©")
    
    print("\n--- Resumen ---")
    encuesta.promedio()
    encuesta.estadisticas()
    
    print("\n--- Quejas ---")
    encuesta.comentarios_bajos()

if __name__ == "__main__":
    demo()
    print("\n\nğŸ® MODO INTERACTIVO")
    sistema_encuestas()
