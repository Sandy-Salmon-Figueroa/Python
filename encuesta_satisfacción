class EncuestaSatisfaccion:
    def __init__(self):
        self.respuestas = []  # (cliente, puntuaci√≥n, comentario)
    def agregar(self, cliente, puntuacion, comentario=""):
        """Agrega una nueva respuesta"""
        if not 1 <= puntuacion <= 10:
            print("‚ùå La puntuaci√≥n debe ser entre 1 y 10")
            return False
        cliente = cliente.strip().title()
        respuesta = (cliente, puntuacion, comentario.strip())
        self.respuestas.append(respuesta)
        print(f"‚úÖ {cliente} - {puntuacion}/10")
        return True
    def promedio(self):
        """Calcula y muestra el promedio"""
        if not self.respuestas:
            print("A√∫n no hay respuestas")
            return 0
        promedio = sum(r[1] for r in self.respuestas) / len(self.respuestas)
        print(f"\nPUNTAJE PROMEDIO: {promedio:.1f}/10")
        if promedio >= 9:
            print("üéâ ¬°Excelente!")
        elif promedio >= 7:
            print("üëç Bien")
        elif promedio >= 5:
            print("üòê Regular")
        else:
            print("‚ö†Ô∏è Necesita mejorar")
        return promedio
    def comentarios_bajos(self):
        """Muestra comentarios con puntuaci√≥n baja (<5)"""
        bajos = [r for r in self.respuestas if r[1] < 5]
        if not bajos:
            print("‚úÖ No hay quejas recientes")
            return []
        print("\n" + "="*40)
        print("üî¥ COMENTARIOS BAJOS")
        print("="*40)
        for cliente, puntos, comentario in bajos:
            print(f"\n{cliente} - {puntos}/10")
            if comentario:
                print(f"   '{comentario}'")
        return bajos
    def comentarios_altos(self):
        """Muestra comentarios con puntuaci√≥n alta (‚â•8)"""
        altos = [r for r in self.respuestas if r[1] >= 8]
        if not altos:
            print("A√∫n no hay comentarios destacados")
            return []
        print("\n" + "="*40)
        print("üü¢ COMENTARIOS DESTACADOS")
        print("="*40)
        for cliente, puntos, comentario in altos:
            print(f"\n{cliente} - {puntos}/10")
            if comentario:
                print(f"   '{comentario}'")
        return altos
    def estadisticas(self):
        """Muestra resumen general"""
        if not self.respuestas:
            print("A√∫n no hay datos")
            return
        total = len(self.respuestas)
        promedio = sum(r[1] for r in self.respuestas) / total
        bajos = len([r for r in self.respuestas if r[1] < 6])
        altos = len([r for r in self.respuestas if r[1] >= 8])
        print("\n" + "="*30)
        print("RESUMEN")
        print("="*30)
        print(f"Total respuestas: {total}")
        print(f"Promedio: {promedio:.1f}/10")
        print(f"Bajas (<6): {bajos}")
        print(f"Altas (‚â•8): {altos}")
    def ver_todos(self):
        """Muestra todas las respuestas"""
        if not self.respuestas:
            print("No hay respuestas a√∫n")
            return
        print("\n" + "="*30)
        print("TODAS LAS RESPUESTAS")
        print("="*30)
        for cliente, puntos, comentario in self.respuestas:
            cara = "üî¥" if puntos < 5 else "üü¢" if puntos >= 8 else "üü°"
            print(f"\n{cliente} - {puntos}/10 {cara}")
            if comentario:
                print(f"   '{comentario}'")
def sistema_encuestas():
    """Sistema principal de encuestas"""
    encuesta = EncuestaSatisfaccion()
    while True:
        print("\n" + "="*25)
        print("ENCUESTAS CLIENTES")
        print("="*25)
        print("1. Nueva respuesta")
        print("2. Ver promedio")
        print("3. Ver quejas")
        print("4. Ver elogios")
        print("5. Ver todas")
        print("6. Estad√≠sticas")
        print("7. Salir")
        opcion = input("\nOpci√≥n: ").strip()
        if opcion == "1":
            print("\n--- Nueva Respuesta ---")
            cliente = input("Cliente: ")
            try:
                puntos = int(input("Puntuaci√≥n (1-10): "))
                comentario = input("Comentario: ")
                encuesta.agregar(cliente, puntos, comentario)
            except:
                print("‚ùå Error en los datos")
        elif opcion == "2":
            print("\n--- Promedio ---")
            encuesta.promedio()
        elif opcion == "3":
            print("\n--- Quejas ---")
            encuesta.comentarios_bajos()
        elif opcion == "4":
            print("\n--- Elogios ---")
            encuesta.comentarios_altos()
        elif opcion == "5":
            print("\n--- Todas ---")
            encuesta.ver_todos()
        elif opcion == "6":
            print("\n--- Estad√≠sticas ---")
            encuesta.estadisticas()
        elif opcion == "7":
            print("¬°Hasta luego!")
            break
        else:
            print("‚ùå Opci√≥n no v√°lida")
# Ejemplo r√°pido
def demo():
    """Demostraci√≥n del sistema"""
    print("DEMOSTRACI√ìN ENCUESTAS")
    print("="*20)
    encuesta = EncuestaSatisfaccion()
    # Respuestas de ejemplo
    print("\n--- Agregando respuestas ---")
    encuesta.agregar("JOS√â GARC√çA", 9, "Excelente servicio")
    encuesta.agregar("KARLA OLMEDO", 3, "Muy lento")
    encuesta.agregar("ALEJANDRA SALMON", 7, "Bien en general")
    encuesta.agregar("ANDREW D√çAZ", 2, "No volver√©")  
    print("\n--- Resumen ---")
    encuesta.promedio()
    encuesta.estadisticas()  
    print("\n--- Quejas ---")
    encuesta.comentarios_bajos()
if __name__ == "__main__":
    demo()
    print("\n\n MODO INTERACTIVO")
    sistema_encuestas()
