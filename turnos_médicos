class SistemaTurnosMedicos:
    def __init__(self):
        """Inicializa la cola de pacientes vacÃ­a"""
        self.cola_pacientes = []
    
    def agregar_paciente(self, nombre, edad, especialidad):
        """
        Agrega un paciente al final de la cola
        
        Args:
            nombre (str): Nombre del paciente
            edad (int): Edad del paciente
            especialidad (str): Especialidad mÃ©dica requerida
        """
        paciente = (nombre, edad, especialidad)
        self.cola_pacientes.append(paciente)
        print(f"âœ… Paciente {nombre} agregado a la cola de {especialidad}")
    
    def atender_paciente(self):
        """
        Atiende al primer paciente en la cola (elimina el primero)
        
        Returns:
            tuple or None: Datos del paciente atendido o None si la cola estÃ¡ vacÃ­a
        """
        if not self.cola_pacientes:
            print("âŒ No hay pacientes en espera")
            return None
        
        paciente_atendido = self.cola_pacientes.pop(0)
        nombre, edad, especialidad = paciente_atendido
        print(f"ğŸ¯ Atendiendo a {nombre} ({edad} aÃ±os) - {especialidad}")
        return paciente_atendido
    
    def mostrar_pacientes(self):
        """Muestra todos los pacientes en espera"""
        if not self.cola_pacientes:
            print("ğŸ“‹ No hay pacientes en espera")
            return
        
        print("\n" + "="*50)
        print("ğŸ“‹ LISTA DE PACIENTES EN ESPERA")
        print("="*50)
        
        for i, paciente in enumerate(self.cola_pacientes, 1):
            nombre, edad, especialidad = paciente
            print(f"{i}. {nombre} - {edad} aÃ±os - {especialidad}")
        print(f"\nTotal de pacientes en espera: {len(self.cola_pacientes)}")
    
    def cantidad_pacientes(self):
        """Retorna la cantidad de pacientes en espera"""
        return len(self.cola_pacientes)

# Ejemplo de uso del sistema
def main():
    # Crear el sistema de turnos
    sistema = SistemaTurnosMedicos()
    
    while True:
        print("\n" + "="*40)
        print("ğŸ¥ SISTEMA DE TURNOS MÃ‰DICOS")
        print("="*40)
        print("1. Agregar paciente")
        print("2. Atender paciente")
        print("3. Mostrar pacientes en espera")
        print("4. Salir")
        
        opcion = input("\nSeleccione una opciÃ³n (1-4): ").strip()
        
        if opcion == "1":
            print("\n--- Agregar nuevo paciente ---")
            nombre = input("Nombre del paciente: ").strip()
            
            try:
                edad = int(input("Edad del paciente: ").strip())
            except ValueError:
                print("âŒ Error: La edad debe ser un nÃºmero entero")
                continue
            
            especialidad = input("Especialidad mÃ©dica: ").strip()
            
            if nombre and especialidad:
                sistema.agregar_paciente(nombre, edad, especialidad)
            else:
                print("âŒ Error: Nombre y especialidad no pueden estar vacÃ­os")
        
        elif opcion == "2":
            print("\n--- Atender paciente ---")
            sistema.atender_paciente()
        
        elif opcion == "3":
            sistema.mostrar_pacientes()
        
        elif opcion == "4":
            print("ğŸ‘‹ Â¡Hasta pronto!")
            break
        
        else:
            print("âŒ OpciÃ³n no vÃ¡lida. Por favor, seleccione 1-4")

# VersiÃ³n simplificada para uso directo
def ejemplo_rapido():
    """Ejemplo rÃ¡pido de uso del sistema"""
    sistema = SistemaTurnosMedicos()
    
    # Agregar algunos pacientes
    sistema.agregar_paciente("Ana GarcÃ­a", 35, "CardiologÃ­a")
    sistema.agregar_paciente("Carlos LÃ³pez", 28, "PediatrÃ­a")
    sistema.agregar_paciente("MarÃ­a RodrÃ­guez", 65, "GeriatrÃ­a")
    
    # Mostrar pacientes
    sistema.mostrar_pacientes()
    
    # Atender un paciente
    sistema.atender_paciente()
    
    # Mostrar estado actual
    sistema.mostrar_pacientes()

if __name__ == "__main__":
    # Ejecutar el ejemplo rÃ¡pido
    print("ğŸ”¬ EJEMPLO RÃPIDO DEL SISTEMA")
    ejemplo_rapido()
    
    # Ejecutar el sistema interactivo
    print("\n\nğŸ® SISTEMA INTERACTIVO")
    main()
