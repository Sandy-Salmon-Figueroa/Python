class TurnosMedicos:
    def __init__(self):
        self.cola = []
    
    def agregar(self, nombre, edad, especialidad):
        """Agrega un paciente a la cola"""
        paciente = (nombre, edad, especialidad)
        self.cola.append(paciente)
        print(f"âœ… {nombre} agregado a {especialidad}")
    
    def atender(self):
        """Atiende al siguiente paciente"""
        if not self.cola:
            print("âœ… No hay pacientes en espera")
            return None
        
        nombre, edad, especialidad = self.cola.pop(0)
        print(f"ğŸ¯ Atendiendo a {nombre} - {especialidad}")
        return (nombre, edad, especialidad)
    
    def mostrar(self):
        """Muestra los pacientes en espera"""
        if not self.cola:
            print("ğŸ“ No hay pacientes en espera")
            return
        
        print("\n" + "="*30)
        print("ğŸ‘¥ PACIENTES EN ESPERA")
        print("="*30)
        
        for i, (nombre, edad, especialidad) in enumerate(self.cola, 1):
            print(f"{i}. {nombre} ({edad} aÃ±os) - {especialidad}")
        
        print(f"\nTotal: {len(self.cola)} pacientes")

def sistema_turnos():
    """Sistema principal de turnos mÃ©dicos"""
    turnos = TurnosMedicos()
    
    while True:
        print("\n" + "="*20)
        print("ğŸ¥ TURNOS MÃ‰DICOS")
        print("="*20)
        print("1. Agregar paciente")
        print("2. Atender paciente")
        print("3. Ver lista")
        print("4. Salir")
        
        opcion = input("\nOpciÃ³n: ").strip()
        
        if opcion == "1":
            print("\n--- Nuevo Paciente ---")
            nombre = input("Nombre: ").strip()
            edad = input("Edad: ").strip()
            especialidad = input("Especialidad: ").strip()
            
            if nombre and edad.isdigit() and especialidad:
                turnos.agregar(nombre, int(edad), especialidad)
            else:
                print("âŒ Datos incorrectos")
        
        elif opcion == "2":
            print("\n--- Atender ---")
            turnos.atender()
        
        elif opcion == "3":
            print("\n--- Lista ---")
            turnos.mostrar()
        
        elif opcion == "4":
            print("ğŸ‘‹ Â¡Hasta pronto!")
            break
        
        else:
            print("âŒ OpciÃ³n no vÃ¡lida")

# Ejemplo rÃ¡pido
def demo():
    """DemostraciÃ³n del sistema"""
    print("ğŸŒŸ SISTEMA DE TURNOS")
    print("="*20)
    
    turnos = TurnosMedicos()
    
    print("\n--- Agregando pacientes ---")
    turnos.agregar("Ana GarcÃ­a", 35, "CardiologÃ­a")
    turnos.agregar("Carlos LÃ³pez", 28, "PediatrÃ­a")
    
    print("\n--- Lista actual ---")
    turnos.mostrar()
    
    print("\n--- Atendiendo ---")
    turnos.atender()
    
    print("\n--- Lista final ---")
    turnos.mostrar()

if __name__ == "__main__":
    demo()
    print("\n\nğŸ® MODO INTERACTIVO")
    sistema_turnos()
