from datetime import datetime

class ControlAsistencia:
    def __init__(self):
        self.asistentes = {}  # nombre: hora
    
    def registrar(self, nombre):
        """Registra a un asistente"""
        nombre = nombre.strip().title()
        
        if nombre in self.asistentes:
            print(f"âŒ {nombre} ya estÃ¡ registrado")
            return False
        
        hora = datetime.now().strftime("%H:%M")
        self.asistentes[nombre] = hora
        
        print(f"âœ… {nombre} - {hora}")
        return True
    
    def verificar(self, nombre):
        """Verifica si alguien asistiÃ³"""
        nombre = nombre.strip().title()
        
        if nombre in self.asistentes:
            print(f"âœ… {nombre} asistiÃ³ a las {self.asistentes[nombre]}")
            return True
        else:
            print(f"âŒ {nombre} no estÃ¡ registrado")
            return False
    
    def total(self):
        """Muestra el total de asistentes"""
        total = len(self.asistentes)
        print(f"\nğŸ‘¥ Total: {total} personas")
        return total
    
    def lista(self):
        """Muestra la lista de asistentes"""
        if not self.asistentes:
            print("ğŸ“ AÃºn no hay asistentes")
            return
        
        print("\n" + "="*30)
        print("ğŸ“‹ LISTA DE ASISTENTES")
        print("="*30)
        
        # Ordenar por hora
        for i, (nombre, hora) in enumerate(sorted(self.asistentes.items(), key=lambda x: x[1]), 1):
            print(f"{i}. {nombre} - {hora}")
    
    def estadisticas(self):
        """Muestra estadÃ­sticas simples"""
        if not self.asistentes:
            print("ğŸ“Š No hay datos aÃºn")
            return
        
        total = len(self.asistentes)
        primero = min(self.asistentes.items(), key=lambda x: x[1])
        ultimo = max(self.asistentes.items(), key=lambda x: x[1])
        
        print("\n" + "="*25)
        print("ğŸ“Š ESTADÃSTICAS")
        print("="*25)
        print(f"Total: {total} personas")
        print(f"Primero: {primero[0]} - {primero[1]}")
        print(f"Ãšltimo: {ultimo[0]} - {ultimo[1]}")

def sistema_asistencia():
    """Sistema principal de asistencia"""
    control = ControlAsistencia()
    
    while True:
        print("\n" + "="*20)
        print("ğŸ¯ CONTROL ASISTENCIA")
        print("="*20)
        print("1. Registrar")
        print("2. Verificar") 
        print("3. Ver lista")
        print("4. Total")
        print("5. EstadÃ­sticas")
        print("6. Salir")
        
        opcion = input("\nOpciÃ³n: ").strip()
        
        if opcion == "1":
            nombre = input("Nombre: ").strip()
            if nombre:
                control.registrar(nombre)
            else:
                print("âŒ Ingresa un nombre")
        
        elif opcion == "2":
            nombre = input("Nombre a verificar: ").strip()
            if nombre:
                control.verificar(nombre)
        
        elif opcion == "3":
            control.lista()
        
        elif opcion == "4":
            control.total()
        
        elif opcion == "5":
            control.estadisticas()
        
        elif opcion == "6":
            print("ğŸ‘‹ Â¡Hasta pronto!")
            break
        
        else:
            print("âŒ OpciÃ³n no vÃ¡lida")

# Ejemplo rÃ¡pido
def demo():
    """DemostraciÃ³n del sistema"""
    print("ğŸŒŸ CONTROL DE ASISTENCIA")
    print("="*20)
    
    control = ControlAsistencia()
    
    print("\n--- Registrando ---")
    control.registrar("Ana GarcÃ­a")
    control.registrar("Carlos LÃ³pez")
    control.registrar("MarÃ­a RodrÃ­guez")
    
    print("\n--- Verificando ---")
    control.verificar("Carlos LÃ³pez")
    control.verificar("Pedro SÃ¡nchez")
    
    print("\n--- Lista ---")
    control.lista()
    
    print("\n--- EstadÃ­sticas ---")
    control.estadisticas()

if __name__ == "__main__":
    demo()
    print("\n\nğŸ® MODO INTERACTIVO")
    sistema_asistencia()
